<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#52844F" />

            <stroke android:width="1dp" android:color="#52844F" />

            <corners android:radius="4dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:centerColor="#760000"
                 android:endColor="#760000" android:startColor="#760000" />

            <stroke android:width="1dp" android:color="#52844F" />

            <corners android:radius="4dp" />
        </shape></item>

</selector>